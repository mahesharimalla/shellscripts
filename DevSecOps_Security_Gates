def runGate(String gateName) {
  sh """
    set -e
    echo "=============================="
    echo "ğŸ§± Running ${gateName}"
    echo "=============================="

    for policy in .security-gates/gates/${gateName}/*.sh; do
      echo "â–¶ Executing \$policy"
      bash "\$policy"
    done
  """
}

def updateOpenProject(String message) {
  if (!env.WP_ID) {
    echo "âš ï¸ WP_ID not set â€“ skipping OpenProject update"
    return
  }

  withCredentials([
    string(credentialsId: 'OPENPROJECT_API_TOKEN', variable: 'OP_TOKEN')
  ]) {
    sh """
      curl -s -X POST \
        -u apikey:\$OP_TOKEN \
        -H "Content-Type: application/json" \
        ${OPENPROJECT_URL}/api/v3/work_packages/${env.WP_ID}/activities \
        -d '{
          "comment": { "raw": "${message}" }
        }'
    """
  }
}


/* ğŸ”´ NEW: Create Gate Failure Ticket */
def createGateTicket(String gateName, String description, String assigneeId) {
  if (!env.WP_ID) {
    echo "âš ï¸ WP_ID not set â€“ skipping ticket creation"
    return
  }

  withCredentials([
    string(credentialsId: 'OPENPROJECT_API_TOKEN', variable: 'OP_TOKEN')
  ]) {
    sh """
      curl -s -X POST \
        -u apikey:\$OP_TOKEN \
        -H "Content-Type: application/json" \
        ${OPENPROJECT_URL}/api/v3/work_packages \
        -d '{
          "subject": "âŒ ${gateName} FAILED",
          "description": { "raw": "${description}" },
          "_links": {
            "project": { "href": "/api/v3/projects/gates-implemenation" },
            "assignee": { "href": "/api/v3/users/${assigneeId}" },
            "parent": { "href": "/api/v3/work_packages/${env.WP_ID}" }
          }
        }'
    """
  }
}


