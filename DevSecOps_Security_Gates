echo "ğŸ“¤ Pushing WebApp image"
docker push ${frontendImage}
"""

      }
    }
  }
}

   


stage('ğŸš€ Deploy LMS via Docker Run (Secure)') {
  steps {
    script {
      withCredentials([
        usernamePassword(
          credentialsId: 'nexus_cred',
          usernameVariable: 'NEXUS_USERNAME',
          passwordVariable: 'NEXUS_PASSWORD'
        )
      ]) {

        sh '''
          set -e

          echo "ğŸ” Logging in to Nexus Docker Registry"
          echo "$NEXUS_PASSWORD" | docker login \
            $LMS_REGISTRY_URL \
            -u "$NEXUS_USERNAME" \
            --password-stdin

          echo "ğŸ”§ Ensuring Docker network exists"
          docker network inspect awrs-net >/dev/null 2>&1 || docker network create awrs-net

          echo "ğŸ§¹ Removing old containers (safe re-deploy)"
          docker rm -f awrs-postgres awrs-backend awrs-frontend >/dev/null 2>&1 || true

          echo "ğŸ˜ Starting PostgreSQL"
          docker run -d \
            --name awrs-postgres \
            --network awrs-net \
            --restart unless-stopped \
            --env-file /var/lib/jenkins/envs/postgres.env \
            -v awrs-db-data:/var/lib/postgresql/data \
            postgres:15

          echo "â³ Waiting for PostgreSQL to be ready..."
          for i in {1..20}; do
            if docker exec awrs-postgres pg_isready -U postgres >/dev/null 2>&1; then
              echo "âœ… PostgreSQL is ready"
              break
            fi
            sleep 3
          done

          echo "ğŸš€ Starting LMS Backend API"
          docker pull ${LMS_REGISTRY_URL}/repository/${LMS_DOCKER_REPO}/awrs-backend:${BUILD_NUMBER}

          docker run -d \
            --name awrs-backend \
            --network awrs-net \
            --restart unless-stopped \
            --env-file /var/lib/jenkins/envs/backend.env \
            -p 8386:8386 \
            ${LMS_REGISTRY_URL}/repository/${LMS_DOCKER_REPO}/awrs-backend:${BUILD_NUMBER}

          echo "â³ Waiting for Backend API to be healthy..."
          for i in {1..20}; do
            if curl -fs http://127.0.0.1:8386/health >/dev/null; then
              echo "âœ… Backend API is healthy"
              break
            fi
            sleep 3
          done

          echo "ğŸŒ Starting LMS Frontend"
          docker pull ${LMS_REGISTRY_URL}/repository/${LMS_DOCKER_REPO}/awrs-frontend:${BUILD_NUMBER}

          docker run -d \
            --name awrs-frontend \
            --network awrs-net \
            --restart unless-stopped \
            --env-file /var/lib/jenkins/envs/frontend.env \
            -p 8001:80 \
            ${LMS_REGISTRY_URL}/repository/${LMS_DOCKER_REPO}/awrs-frontend:${BUILD_NUMBER}

          echo "ğŸ‰ LMS Deployment Completed Successfully"

          echo "ğŸ”“ Logging out from Nexus"
          docker logout $LMS_REGISTRY_URL
        '''
      }
    }
  }
}

stage('Gate-4: DAST - OWASP ZAP (Automation Framework)') {
  steps {
    sh '''
      #!/bin/bash
      set -eu 
      echo "ğŸ§¹ Cleaning old ZAP reports..."
      rm -rf zap-report/*
      mkdir -p zap-report
      chmod 777 zap-report

      echo "ğŸ” Running OWASP ZAP Automation Framework..."

      docker run --rm \
        --network host \
        -v "$WORKSPACE/zap-report:/zap/wrk" \
        -v "$WORKSPACE/zap/zap-automation.yaml:/zap/zap-automation.yaml" \
        zaproxy/zap-weekly \
        zap.sh -cmd -port 8091 -autorun /zap/zap-automation.yaml
    '''
  }

  post {
    always {
      echo "ğŸ“Š Publishing OWASP ZAP report..."
      publishHTML(target: [
        reportDir: 'zap-report',
        reportFiles: 'zap-report.html',
        reportName: 'OWASP ZAP DAST Report',
        keepAll: true,
        alwaysLinkToLastBuild: true,
        allowMissing: true
      ])
    }
    failure {
      echo 'âŒ Gate-4 FAILED â€“ High/Critical DAST vulnerabilities detected'
    }
    success {
      echo 'âœ… Gate-4 PASSED â€“ DAST security gate cleared'
    }
  }
}

    } // end stages

    post {
        success {
            updateOpenProject("ğŸ‰ Jenkins build #${BUILD_NUMBER} SUCCESS")
        }
        failure {
            updateOpenProject("âŒ Jenkins build #${BUILD_NUMBER} FAILED")
        }
    }

} // end pipeline

