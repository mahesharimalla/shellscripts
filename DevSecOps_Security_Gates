stage('ğŸ”— Extract OpenProject Work Package') {
  steps {
    script {
      def commitMsg = sh(
        script: "git log -1 --pretty=%B",
        returnStdout: true
      ).trim()

      echo "ğŸ“Œ Commit message: ${commitMsg}"

      // âœ… CORRECT REGEX
      def matcher = (commitMsg =~ /WP#([0-9]+)/)

      if (!matcher) {
        error "âŒ Commit message must contain WP#<id> (example: WP#166)"
      }

      env.WP_ID = matcher[0][1]
      echo "âœ… Linked to OpenProject Work Package: WP#${env.WP_ID}"
    }
  }
}


    /* ===================================================== */
    stage('ğŸš€ Notify OpenProject â€“ Build Started') {
      steps {
        script {
          updateOpenProject("ğŸš€ Jenkins build #${BUILD_NUMBER} STARTED")
        }
      }
    }

    /* ===================================================== */
    stage('ğŸ” Fetch DevSecOps Gate Policies') {
      steps {
        dir('.security-gates') {
          git url: 'https://github.com/pranudevsec/devsecops-gates.git',
              branch: 'main'
          sh 'find gates -type f -name "*.sh" -exec chmod +x {} +'
        }
      }
    }



