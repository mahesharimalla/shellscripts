stage('Gate-0B: TruffleHog â€“ Verified Secrets') {
  options { timeout(time: 5, unit: 'MINUTES') }

  steps {
    sh '''
      set -e
      echo "ğŸ” TruffleHog: scanning for verified secrets"

      mkdir -p security-reports/trufflehog

      trufflehog filesystem backend frontend \
        --only-verified \
        --no-update \
        --exclude-paths node_modules,dist,build,target,coverage,security-reports \
        --json > security-reports/trufflehog/report.json || true

      FINDINGS=$(grep -c '"SourceMetadata"' security-reports/trufflehog/report.json || true)

      if [ "$FINDINGS" -gt 0 ]; then
        echo "âŒ Verified secrets detected"
        exit 1
      fi

      echo "âœ… No verified secrets found"
    '''
  }

  post {
    always {
      archiveArtifacts artifacts: 'security-reports/trufflehog/report.json', fingerprint: true
    }
  }
}




