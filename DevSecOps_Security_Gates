stage('Gate-0A: Gitleaks â€“ Secret Detection') {
  options { timeout(time: 5, unit: 'MINUTES') }

  steps {
    sh '''
      set -e
      echo "ğŸ” Gitleaks: scanning source directories"

      mkdir -p security-reports/gitleaks

      gitleaks detect \
        --source backend \
        --source frontend \
        --no-git \
        --config .gitleaks.toml \
        --redact \
        --report-format json \
        --report-path security-reports/gitleaks/report.json
    '''
  }

  post {
    always {
      archiveArtifacts artifacts: 'security-reports/gitleaks/report.json', fingerprint: true
    }
  }
}






