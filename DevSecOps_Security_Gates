stage('ğŸ§± Gate-1: SAST / Code Quality') {
      steps {
        script {
          try {
            timeout(time: 5, unit: 'MINUTES') {
              waitForQualityGate abortPipeline: false
            }
            updateOpenProject("âœ… Gate-1 PASSED â€“ SonarQube Quality Gate")
          } catch (e) {
            updateOpenProject("âŒ Gate-1 FAILED â€“ SonarQube Quality Gate")
            emailext(
              subject: "ğŸš¨ Gate-1 FAILED | SonarQube",
              body: "Quality Gate FAILED\nBuild: #${BUILD_NUMBER}\nWP: ${WP_ID}",
              to: "appsec@company.com"
            )
            error("Stopping pipeline â€“ Gate-1 failed")
          }
        }
      }
    }



//Fail build if any CVE has a CVSS score of 8 or higher
stage('ğŸ›¡ï¸ Gate-2: OWASP Dependency Check') {
    steps {
        echo "ğŸ” Running OWASP Dependency-Check with Quality Gates..."

        dependencyCheck(
            odcInstallation: 'DP_Check',
            additionalArguments: """
                --project demo-new-awrs
                --scan .
                --format CSV
                --fromat HTML
                --failOnCVSS 8 
            """
        )

        dependencyCheckPublisher(
            pattern: '**/dependency-check-report.xml'
        )
    }

    post {
        success {
            echo "âœ… Dependency-Check PASSED (No HIGH / CRITICAL vulnerabilities)"
        }

        failure {
            echo "âŒ Dependency-Check FAILED (HIGH / CRITICAL vulnerabilities found)"

            emailext(
                subject: "ğŸš¨ OWASP Dependency Check FAILED | Pipeline Stopped",
                body: """
OWASP Dependency-Check FAILED.

âŒ HIGH / CRITICAL vulnerabilities detected
âŒ Pipeline STOPPED

Job: ${env.JOB_NAME}
Build: #${env.BUILD_NUMBER}
""",
                to: 'security-ao@company.com'
            )
        }
    }
}




stage('Build Docker Images') {
  steps {
    script {
      def backendImage    = "${LMS_REGISTRY_URL}/repository/${LMS_DOCKER_REPO}/awrs-backend:${env.BUILD_NUMBER}"
      def frontendImage = "${LMS_REGISTRY_URL}/repository/${LMS_DOCKER_REPO}/awrs-frontend:${env.BUILD_NUMBER}"

      withCredentials([usernamePassword(
        credentialsId: 'nexus_cred',
        usernameVariable: 'NEXUS_USERNAME',
        passwordVariable: 'NEXUS_PASSWORD'
      )]) {

        sh '''
          echo "âš™ï¸ Logging in to Nexus Docker Registry..."
          echo "$NEXUS_PASSWORD" | docker login $LMS_REGISTRY_URL \
            -u "$NEXUS_USERNAME" --password-stdin
        '''



        sh """
echo "ğŸ§¹ Cleaning old awrs-backend images..."
docker images "${LMS_REGISTRY_URL}/repository/${LMS_DOCKER_REPO}/awrs-backend" \
  --format "{{.Repository}}:{{.Tag}}" \
  | grep -v "${BUILD_NUMBER}" \
  | xargs -r docker rmi -f


echo "ğŸ› ï¸ Building API image"
docker build --no-cache -t ${backendImage} ./backend
"""

        sh """
echo "ğŸ§¹ Cleaning old awrs-frontend images..."
docker images "${LMS_REGISTRY_URL}/repository/${LMS_DOCKER_REPO}/awrs-frontend" \
  --format "{{.Repository}}:{{.Tag}}" \
  | grep -v "${BUILD_NUMBER}" \
  | xargs -r docker rmi -f


echo "ğŸ› ï¸ Building WebApp image"
docker build --no-cache -t ${frontendImage} ./frontend
"""

      }
    }
  }
}

stage('SBOM Generation (Syft)') {
  steps {
    script {
      def backendImage  = "${LMS_REGISTRY_URL}/repository/${LMS_DOCKER_REPO}/awrs-backend:${env.BUILD_NUMBER}"
      def frontendImage = "${LMS_REGISTRY_URL}/repository/${LMS_DOCKER_REPO}/awrs-frontend:${env.BUILD_NUMBER}"

      sh '''
        set -eu

        echo "ğŸ§¹ Cleaning old SBOM reports..."
        rm -rf sbom
        mkdir -p sbom

        echo "ğŸ§¾ Generating SBOM for Backend image..."
        syft ''' + backendImage + ''' -o spdx-json > sbom/awrs-backend-''' + env.BUILD_NUMBER + '''-sbom.json

        echo "ğŸ§¾ Generating SBOM for Frontend image..."
        syft ''' + frontendImage + ''' -o spdx-json > sbom/awrs-frontend-''' + env.BUILD_NUMBER + '''-sbom.json
      '''
    }
  }

  post {
    always {
      archiveArtifacts artifacts: 'sbom/*.json', fingerprint: true
    }
  }
}




