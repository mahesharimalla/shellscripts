stage('Gate:3 Trivy Docker Image Scan') {
  steps {
    script { 
      def backendImage    = "${LMS_REGISTRY_URL}/repository/${LMS_DOCKER_REPO}/awrs-backend:${env.BUILD_NUMBER}"
      def frontendImage = "${LMS_REGISTRY_URL}/repository/${LMS_DOCKER_REPO}/awrs-frontend:${env.BUILD_NUMBER}"

      sh """
        echo "ğŸ” Scanning API image with Trivy..."
        trivy image \
          --severity HIGH,CRITICAL \
          --exit-code 1 \
          --format json \
          --output trivy-api-report.json \
          --quiet \
          ${backendImage}

        echo "ğŸ” Scanning WebApp image with Trivy..."
        trivy image \
          --severity HIGH,CRITICAL \
          --format json \
          --output trivy-webapp-report.json \
          --quiet \
          ${frontendImage}
      """
    }
  }
  post {
    always {
      archiveArtifacts artifacts: 'trivy-*-report.json', fingerprint: true
    }
  }
}




